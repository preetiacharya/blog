                    <h4>Leave a Comment:</h4>
                    <form role="form">
                        <div class="form-group">
                                <% @comment = Comment.new %>
                                <% if user_signed_in? %>
                                    <%= render '/comments/form' %>
                                <%end%>
                        </div>                        
                    </form>
                </div>

                <hr>

                <!-- Comment -->
                <% @article.comments.each do |comment| %>
