                    <%= link_to comment_path(comment.id), method: :delete, data: { confirm: 'Are you sure?', remote: true } do%>
                    <i class="glyphicon glyphicon-trash"></i>
                    <%end%>
                    <% end %>
                </div>
                <%end %>
