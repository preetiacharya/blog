                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading"> <%= comment.title %>
                            <small> <%= comment.created_at.strftime("%B %d, %Y at %H:%M %p") %></small>
                        </h4>
                        <%= comment.body %>
                    </div>
