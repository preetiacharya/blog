<div class="row">
	<div class="col-md-6">
	<div class="page-header">
		<h3>New Article</h3>
	</div>
		<%= render 'form' %>
	</div>

	<div class="col-md-6">

	<div class="page-header">
		<h3>Add Category</h3>
	</div>

		<%= render './categories/add_category' %>

		<div class="page-header">
			<h3>Categories</h3>
		</div>
		<ul class="list-group">
			<% Category.all.each do |category| %>
			<li class="list-group-item">
				<span class="badge"><%= category.articles.size %></span>
				<%= category.name %>
			</li>
			<%end%>
		</ul>
	</div>
</div>

<%= link_to 'Back', articles_path %>
